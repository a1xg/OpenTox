<CustomCamera>:
    resolution: (640,480)
    play: True
    keep_ratio: True
    allow_stretch: True
    canvas.before:
        PushMatrix
    canvas.after:
        PopMatrix


<CameraWidget>:
    CustomCamera:
        id: camera
    BoxLayout:
        id: buttons
        orientation: 'horizontal'
        size_hint: (1,.1)
        Button:
            id: detect_text
            text: "[color=000000]Detect Text[/color]"
            markup:True
            background_normal: ''
            background_color: (0,125,0,100) if camera.detectText else (255,0,0,255)
            on_press: camera.detectText = not camera.detectText
            pos: (0,root.height - self.height)
